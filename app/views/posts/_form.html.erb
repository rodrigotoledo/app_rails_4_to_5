<%= form_for(@post, html: { class: "form-horizontal" }) do |f| %>
  <!-- Renderizar a partial de mensagens de erro -->
  <%= render "shared/error_messages", resource: @post %>

  <!-- Campo de Título -->
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
    </div>
  </div>

  <!-- Campo de Conteúdo -->
  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control", rows: 5, placeholder: "Write your content here" %>
    </div>
  </div>

  <!-- Botão de Enviar -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save Post", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
