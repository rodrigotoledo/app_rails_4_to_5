<h1 class="text-center">Listing Posts</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr class="active">
        <th>Title</th>
        <th>Content</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td class="text-center">
            <%= link_to 'Show', post, class: "btn btn-info btn-sm" %>
          </td>
          <td class="text-center">
            <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning btn-sm" %>
          </td>
          <td class="text-center">
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
</div>
