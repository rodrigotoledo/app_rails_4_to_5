<h2 class="text-center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
  <%= render "shared/error_messages", resource: resource %>

  <!-- Campo de Email -->
  <div class="form-group">
    <%= f.label :email, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
    </div>
  </div>

  <!-- BotÃ£o de Envio -->
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<!-- Links Adicionais -->
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
